@model TimeFrameWebAPIClient.DTOs.ProjectDto

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="~/css/project.css" />

<div class="create-project-container">
    <form asp-controller="Projects" asp-action="Create" class="form">
        <h1>Create a new project</h1>
        <div style="background-color: grey; width: 100%; height: 1px; margin: 10px"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProjectName" class="form-label"> Project Name </label>
            <input asp-for="ProjectName" class="form-input" />
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProjectDescription" class="form-label"></label>
            <textarea asp-for="ProjectDescription" rows="4" cols="50" class="form-input"></textarea>
            <span asp-validation-for="ProjectDescription" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="action-button" />
        <a class="action-button" asp-controller="Teams" asp-action="Details" asp-route-id="@Model.TeamID">
            <ion-icon name="arrow-back-outline"></ion-icon>
            Back to my teams
        </a>
        <span>@ViewBag.ErrorMessage</span>
    </form>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
