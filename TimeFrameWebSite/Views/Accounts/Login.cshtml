@model TimeFrameWebAPIClient.DTOs.LoginDto

@{
    ViewData["Title"] = "Log in";
}
@if (!Context.User.Identity.IsAuthenticated)
{
    <link rel="stylesheet" href="~/css/login.css" />

    <div class="container">

        <form method="post" class="form">
            <h2 class="login-text">Login</h2>
            <div style="background-color: grey; width: 100%; height: 1px; margin: 10px;"></div>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group2">
                <label asp-for="Email" class="form-label" required></label>
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group2">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-input" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="util-container">
                <div>
                    <input style="width: 16px;height:16px;" type="checkbox" name="remember" id="remember">
                    <label for="remember">Stay logged in?</label>
                </div>
                <a>Forgot your password?</a>
            </div>
            <span class="error-message-span">@ViewBag.ErrorMessage</span>
            <input type="submit" value="Login" class="action-button" />
        </form>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
