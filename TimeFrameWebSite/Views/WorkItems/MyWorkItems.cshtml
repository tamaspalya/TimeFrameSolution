<table class="table">
    <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Status</th>
        <th>Project id</th>
    </tr>

    @foreach (dynamic workItem in @Model.WorkItems)
    {
        <tr>
            <td>@workItem.WorkItemName</td>
            <td>@workItem.StartDate</td>
            <td>@workItem.EndDate</td>
            <td>@workItem.Status</td>
            <td>@workItem.ProjectId</td>
        </tr>
    }
</table>


