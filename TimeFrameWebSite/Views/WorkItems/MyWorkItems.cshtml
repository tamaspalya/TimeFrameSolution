@model dynamic

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="~/css/teams.css" />

<div>
    <div class="title-container">
        <h1 class="page-title">My tasks</h1>
        <form method="get" asp-action="MyWorkItems">
            <p>
                <input type="search" placeholder="Enter task name" value="@ViewData["GetWorkItemDetails"]" name="searchCriteria"
                       style="width:500px;"/>
                <input type="submit" value="Search" class="btn btn-primary"/> |
                <a asp-action="MyWorkItems">Get all tasks</a>
            </p>
        </form>

    </div>



    <hr />
